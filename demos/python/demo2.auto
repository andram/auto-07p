demo('bvp')

bvp = run('bvp')
for solution in bvp("BP"):
    bp = load(solution, ISW=-1, NTST=50)
    # Compute forwards
    print "Solution label", bp["LAB"], "forwards"
    fw = run(bp)
    # Compute backwards
    print "Solution label", bp["LAB"], "backwards"
    bw = run(bp,DS='-')
    bvp = bvp + merge(fw + bw)

bvp=relabel(bvp)
save(bvp, 'bvp')
plot(bvp)
wait()
