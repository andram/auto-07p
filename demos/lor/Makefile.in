PGM    =lor
FC     = @FC@
OPT    = @OPT_FLAG@
FFLAGS = @FFLAGS@ $(OPT)
SRC    = $(PGM).f
EXE    = $(PGM).exe
LIBS   = $(AUTO_DIR)/lib/*.o
RM     = rm -f
#
all: clean $(EXE) run
#
$(EXE): $(SRC:.f=.o)
	$(FC) $(FFLAGS) $(SRC:.f=.o) -o $@ $(LIBS)
#
run: first second third
#
first:	$(EXE)
	@echo " "
	@echo "Demo $(PGM) is started"
	@echo " "
	@echo "Starting conversion of $(PGM).dat : "
	@echo "(Required files : $(PGM).f, c.$(PGM), $(PGM).dat)"
	@$(FC) $(FFLAGS) $(AUTO_DIR)/src/fcon.f $(PGM).f -o fcon
	@cp c.$(PGM).1   fort.2
	@cp $(PGM).dat fort.3
	@./fcon
	@mv fort.8 s.dat
	@rm fcon* fort.2 fort.3
	@echo "Conversion done : converted file saved as s.dat"
	@echo " "
	@echo "$(PGM) : first run : a solution branch starting from numerical data"
	@cp c.$(PGM).1 fort.2
	@cp s.dat fort.3
	@touch fort.3
	@cp $(PGM).dat fort.4
	@$(AUTO_COMMAND_PREFIX) ./$(EXE)
	@cp fort.7 b.$(PGM)
	@cp fort.8 s.$(PGM)
	@cp fort.9 d.$(PGM)
	@echo " Saved as *.$(PGM)"
	@$(RM) fort.*
#
second:	$(EXE)
	@echo " "
	@echo "$(PGM) : second run : switch branches at a period-doubling"
	@cp c.$(PGM).2 fort.2
	@cp s.$(PGM)   fort.3
	@$(AUTO_COMMAND_PREFIX) ./$(EXE)
	@cat fort.7 >> b.$(PGM)
	@cat fort.8 >> s.$(PGM)
	@cat fort.9 >> d.$(PGM)
	@echo " Appended to *.$(PGM)"
	@$(RM) fort.*
#
third:	$(EXE)
	@echo " "
	@echo "$(PGM) : third run : another period-doubling"
	@cp c.$(PGM).3 fort.2
	@cp s.$(PGM)   fort.3
	@$(AUTO_COMMAND_PREFIX) ./$(EXE)
	@cat fort.7 >> b.$(PGM)
	@cat fort.8 >> s.$(PGM)
	@cat fort.9 >> d.$(PGM)
	@echo " Appended to *.$(PGM)"
	@$(RM) fort.*
	@echo " "
	@echo "Demo $(PGM) is done"
#
clean:
	@echo "Cleaning $(PGM) ..."
	@cp $(SRC) $(EXE)
	@$(RM) *.exe *.o b.* s.* d.* fort.* *~ core
	@echo "Cleaning ... done"
 
