PGM    = nag
FC     = @FC@
OPT    = @OPT_FLAG@
FFLAGS = @FFLAGS@ $(OPT)
SRC    = $(PGM).f
EXE    = $(PGM).exe
LIBS   = $(AUTO_DIR)/lib/*.o
RM     = rm -f
#
all: clean $(EXE) run
#
$(EXE): $(SRC:.f=.o)
	$(FC) $(FFLAGS) $(SRC:.f=.o) -o $@ $(LIBS)
#
#run: first second third fourth
run: first second
#
first:	$(EXE)
	@echo " "
	@echo "Demo $(PGM) is started"
	@echo " "
	@echo "$(PGM) : first run : part of a branch of heteroclinic orbits"
	@cp c.$(PGM).1 fort.2
	@touch fort.3
	@$(AUTO_COMMAND_PREFIX) ./$(EXE)
	@cp fort.7 b.$(PGM)
	@cp fort.8 s.$(PGM)
	@cp fort.9 d.$(PGM)
	@echo " Saved as *.$(PGM)"
	@$(RM) fort.*
#
second:	$(EXE)
	@echo " "
	@echo "$(PGM) : second run : compute in opposite direction"
	@cp c.$(PGM).2 fort.2
	@cp s.$(PGM)   fort.3
	@$(AUTO_COMMAND_PREFIX) ./$(EXE)
	@cat fort.7 >> b.$(PGM)
	@cat fort.8 >> s.$(PGM)
	@cat fort.9 >> d.$(PGM)
	@echo " Appended to *.$(PGM)"
	@$(RM) fort.*
	@echo "Demo $(PGM) is done"
#
third:	$(EXE)
	@echo " "
	@echo "$(PGM) : third run"
	@cp c.$(PGM).3 fort.2
	@cp s.$(PGM)   fort.3
	@$(AUTO_COMMAND_PREFIX) ./$(EXE)
	@cat fort.7 >> b.$(PGM)
	@cat fort.8 >> s.$(PGM)
	@cat fort.9 >> d.$(PGM)
	@echo " Appended to *.$(PGM)"
	@$(RM) fort.*
#
fourth:	$(EXE)
	@echo " "
	@echo "$(PGM) : fourth run"
	@cp c.$(PGM).4 fort.2
	@cp s.$(PGM)   fort.3
	@$(AUTO_COMMAND_PREFIX) ./$(EXE)
	@cat fort.7 >> b.$(PGM)
	@cat fort.8 >> s.$(PGM)
	@cat fort.9 >> d.$(PGM)
	@echo " Appended to *.$(PGM)"
	@$(RM) fort.*
	@echo " "
	@echo "Demo $(PGM) is done"
#
clean:
	@echo "Cleaning $(PGM) ..."
	@cp $(SRC) $(EXE)
	@$(RM) *.exe *.o b.* s.* d.* fort.* *~ core
	@echo "Cleaning ... done"
 
