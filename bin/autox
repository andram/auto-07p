#! /bin/sh
PPATH=$AUTO_DIR/python:$AUTO_DIR/python/graphics:$DV/Python_interface/python_script:$AUTO_DIR/python/lib/Linux_OpenGL:$AUTO_DIR/python/lib/Linux_Mesa:.
if [ -z "$PYTHONPATH" ]; then
    PYTHONPATH=$PPATH
else
    PYTHONPATH=$PPATH:$PYTHONPATH
fi
export PYTHONPATH

if test "`uname`" = "Darwin"; then
  if which pythonw > /dev/null; then
    exec pythonw ${1+"$@"};
  fi
fi
python ${1+"$@"};
